rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // RAG Knowledge Base - Restaurant-specific access only
    match /rag_knowledge/{document} {
      allow read, write: if request.auth != null 
        && resource.data.restaurantId == request.auth.token.restaurantId;
      
      // Additional security: Verify user has access to restaurant
      allow read, write: if request.auth != null 
        && exists(/databases/$(database)/documents/restaurants/$(resource.data.restaurantId))
        && (resource.data.restaurantId in request.auth.token.restaurantIds 
            || request.auth.token.restaurantId == resource.data.restaurantId);
    }
    
    // Conversations - User and restaurant-specific access
    match /conversations/{document} {
      allow read, write: if request.auth != null 
        && resource.data.userId == request.auth.uid
        && resource.data.restaurantId == request.auth.token.restaurantId;
    }
    
    // Restaurants - Owner and staff access only
    match /restaurants/{restaurantId} {
      allow read, write: if request.auth != null 
        && (resource.data.ownerId == request.auth.uid
            || exists(/databases/$(database)/documents/restaurants/$(restaurantId)/staff/$(request.auth.uid))
            || exists(/databases/$(database)/documents/restaurants/$(restaurantId)/invitations/$(request.auth.uid)));
      
      // Restaurant subcollections
      match /{subcollection}/{document} {
        allow read, write: if request.auth != null 
          && (get(/databases/$(database)/documents/restaurants/$(restaurantId)).data.ownerId == request.auth.uid
              || exists(/databases/$(database)/documents/restaurants/$(restaurantId)/staff/$(request.auth.uid))
              || exists(/databases/$(database)/documents/restaurants/$(restaurantId)/invitations/$(request.auth.uid)));
      }
    }
    
    // Staff management - Owner only
    match /restaurants/{restaurantId}/staff/{userId} {
      allow read, write: if request.auth != null 
        && get(/databases/$(database)/documents/restaurants/$(restaurantId)).data.ownerId == request.auth.uid;
    }
    
    // Invitations - Owner and invited user
    match /restaurants/{restaurantId}/invitations/{userId} {
      allow read, write: if request.auth != null 
        && (get(/databases/$(database)/documents/restaurants/$(restaurantId)).data.ownerId == request.auth.uid
            || request.auth.uid == userId);
    }
  }
}

